#user

user=[]
def add_user(username,userid,contact):
      user_list = {"name": username, "userid":userid, "contact": contact}
      user.append(user_list)
      print("added user",user_list)
      print("curent user",user)
     
username=input("enter a name\n")
userid=input("enter a id\n")
contact=input("enter a contact")
add_user(username,userid,contact)
